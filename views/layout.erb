<!DOCTYPE html>
<html>
	<head>
		<title>PizzaShop</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<!-- Bootstrap -->
		<link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    	<script src="/vendor/jquery-1.9.1.min.js"></script>
    	<script src="/app.js"></script>
    	<!-- Include all compiled plugins (below), or include individual files as needed -->
    	<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>

		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		  <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
		<![endif]-->
	</head>
	<body>
	<script type="text/javascript">
		$(function() {
  		get_count()
  		  	})
  	</script>
		<div class="container">

			<!-- Static navbar -->
			<nav class="navbar navbar-default" role="navigation">
			  <div class="navbar-header">
			    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
			      <span class="sr-only">Toggle navigation</span>
			      <span class="icon-bar"></span>
			      <span class="icon-bar"></span>
			      <span class="icon-bar"></span>
			    </button>
			    <a class="navbar-brand" href="/">My PizzaShop</a>
			  </div>
			  <div class="navbar-collapse collapse">
			    <ul class="nav navbar-nav">
			      <li><a href="/about">About</a></li>
			      <li><a href="/orders_list">Orders list</a></li>
			      <li><a href="/contacts">Contacts</a></li>
			    </ul>
			    <ul class="nav navbar-nav navbar-right">
			    	<form id="crt" action="/cart" method="POST">
			        	<li>
			        	<input id="order" name="order[content]" type="hidden">
			        	<button type="submit" class="btn btn-primary btn-lg" onclick="get_orders()"><img src="./images/cart.png" style="vertical-align: middle"><div style="display: inline-block" id="crt_btn">Cart(...)</div></button>
			        	<!-- <button id="crt_btn" type="submit" class="btn btn-primary btn-lg" on="get_count()" onclick="get_orders()"><img src="./images/cart.png" style="vertical-align: middle">Cart(...)</button> -->
			        	</li>
			        </form>
			    </ul>
			  </div><!--/.nav-collapse -->
			</nav>

			<div>
			      <%if @error && @error.length > 0 then %>
			          <div class="alert alert-danger"><%=@error%></div>
			      <% end %>
			      <%= yield %>
			</div>

	</div>
  </body>
</html>
